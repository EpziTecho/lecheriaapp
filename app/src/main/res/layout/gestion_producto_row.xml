<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:background="@drawable/gestion_producto_background"
    android:orientation="horizontal"
    android:layout_marginLeft="17dp"
    android:layout_marginTop="10dp"
    >
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imagenProductoRow"
        android:layout_width="117dp"
        android:layout_height="77dp"
        android:paddingLeft="11dp"
        android:layout_gravity="center_vertical"
        app:shapeAppearanceOverlay="@style/RoundedImageViewProd"
        android:scaleType="centerInside"
        app:strokeWidth="2dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:orientation="vertical">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/nombreProductoRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
                android:text="nombre"
                android:textColor="@color/black"
                android:gravity="start"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


        <TextView
            android:id="@+id/NumeroCalorias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Calorias"
            android:textColor="@color/black" />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="Preci anter"
                android:gravity="start"/>
            <TextView
                android:id="@+id/precioProductoRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:gravity="end"/>

        </androidx.appcompat.widget.LinearLayoutCompat>




        <TextView
            android:id="@+id/descripcionProductoRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/black" />


    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>