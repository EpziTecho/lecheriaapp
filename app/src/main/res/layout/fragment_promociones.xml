<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Vista.PromocionesView.PromocionesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <!-- Contenedor para título y lista -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleTextView"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <!-- Título -->
                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Tenemos las mejores promos"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Subtitulo -->
                <TextView
                    android:id="@+id/subtitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="Cada temporada las mejores ofertas para ti"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/producto_destacado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:elevation="0dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="0dp">

                        <Button
                            android:id="@+id/btn_promos_favorito"
                            style="@android:style/Widget.Material.Light.Button.Borderless"
                            android:layout_width="64dp"
                            android:layout_height="40dp"
                            android:layout_gravity="right"
                            android:backgroundTint="#00FFFFFF"
                            android:drawablePadding="0dp"
                            android:foreground="@drawable/favoritoseleccionado"
                            android:foregroundGravity="center"
                            android:insetBottom="0dp"
                            android:padding="0dp"
                            android:text="Button"
                            android:textColor="#00FFFFFF"
                            android:textColorLink="#00FFFFFF"
                            android:translationZ="5dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="0dp"
                            android:orientation="vertical"
                            android:translationY="-25dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="centerCrop"
                                android:src="@drawable/baseline_star_24"
                                tools:srcCompat="@drawable/ensaladaVistaHorizontal" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="188dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="4dp"
                                    android:text="Ensalada Ternerita Fit"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start|left"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/producto_descripcion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal"
                                    android:text="295 cal "
                                    android:textColor="#54595F"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="266dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:text="S/.12.50"
                                    android:textColor="#FF6565"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/producto_precio"
                                    android:layout_width="169dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:paddingBottom="4dp"
                                    android:text="Disponible"
                                    android:textAlignment="viewStart"
                                    android:textColor="#54595F"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Todas las sedes"
                                    android:textAlignment="viewEnd"
                                    android:textColor="#54595F"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
