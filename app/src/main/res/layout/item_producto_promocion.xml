<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/gestion_producto_background"
    android:layout_marginLeft="17dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:layout_marginBottom="8dp"
    android:elevation="10dp"

    android:gravity="center"
    >
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imagenProductoRow"
        android:layout_width="270dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:elevation="1dp"
        android:layout_marginTop="25dp"
        app:shapeAppearanceOverlay="@style/RoundedImageViewProd"/>

    <Button
        android:id="@+id/btn_favorito"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="#00FFFFFF"
        android:foreground="@drawable/favoritonoseleccionado"
        android:translationX="130dp"
        android:translationY="-235dp"
        />

    <TextView
        android:id="@+id/nombreProductoRow"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="-30dp"
        android:text="Chocofit tapa"
        android:textColor="#0E0E0E"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/caloriasproductorow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="365 cal " />

        </LinearLayout>

        <TextView
            android:id="@+id/precioProductoRow"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_weight="1"
            android:text="S/.9.00"
            android:textColor="#050505"
            android:textStyle="bold"
            android:gravity="right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/disponibilidadproductorow"
            android:layout_width="56dp"
            android:layout_height="match_parent"


            android:text="callao"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/estadoProductoRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Todas las sedes"
            android:gravity="right"/>
    </LinearLayout>




</LinearLayout>