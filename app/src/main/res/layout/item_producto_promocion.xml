<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_margin="10dp"
    android:focusable="auto"
    android:orientation="vertical"
    android:background="@drawable/producto_background"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/producto_destacado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="0dp">

            <Button
                android:id="@+id/btn_favorito"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#00FFFFFF"
                android:translationX="130dp"
                android:translationY="0dp"
                android:foreground="@drawable/favoritonoseleccionado"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:orientation="vertical"
                android:translationY="-25dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imagenProductoRow"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="0dp"
                    android:cropToPadding="false"
                    app:shapeAppearanceOverlay="@style/RoundedImageViewProd"
                    app:srcCompat="@drawable/image2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nombreProductoRow"
                        android:layout_width="188dp"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:paddingTop="10dp"
                        android:paddingBottom="4dp"
                        android:text="Ensalada Ternerita Fit"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/caloriasproductorow"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:text="295 cal "
                        android:textColor="#54595F"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/precioProductoRow"
                        android:layout_width="266dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="S/.12.50"
                        android:textColor="#FF6565"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/disponibilidadproductorow"
                        android:layout_width="169dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingBottom="4dp"
                        android:text="TodasLasSedes"
                        android:textAlignment="viewStart"
                        android:textColor="#54595F"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/estadoProductoRow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Disponible"
                        android:textAlignment="viewEnd"
                        android:textColor="#54595F"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>