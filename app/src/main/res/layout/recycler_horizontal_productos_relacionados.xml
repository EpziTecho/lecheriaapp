<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/producto_background"
    android:orientation="vertical"
    android:layout_marginLeft="17dp"
    android:layout_marginTop="10dp"
    android:elevation="10dp"

    >
    <!-- android:layout_width="138dp"
        android:layout_height="84dp" -->

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imagenProductoRow"
        android:layout_width="138dp"
        android:layout_height="84dp"
        android:layout_gravity="center"
        app:shapeAppearanceOverlay="@style/RoundedImageViewProd"
        android:scaleType="centerInside"
        app:strokeWidth="2dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_favorito"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:background="#00FFFFFF"
        android:foreground="@drawable/favoritonoseleccionado"
        android:translationX="60dp"
        android:translationY="-100dp"
        />

    <TextView
        android:id="@+id/nombreProductoRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chocofit tapa"
        android:textColor="#0E0E0E"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/caloriasproductorow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="365 cal " />

        </LinearLayout>

        <TextView
            android:id="@+id/precioProductoRow"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_weight="1"
            android:text="S/.9.00"
            android:textColor="#050505"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/disponibilidadproductorow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disponible en:"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/estadoProductoRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Todas las sedes"
        android:layout_marginBottom="4dp"
        android:gravity="center"/>

</LinearLayout>