<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginBottom="70dp"
    tools:context=".Vista.UbicanosView.UbicanosFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            tools:context=".Vista.UbicanosView.UbicanosFragment">

            <!-- Título -->
            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubicanos"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="16dp"/>

            <!-- Mapa-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    />

                <!-- Botones  -->

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    >

                    <Button
                        style="?attr/materialButtonOutlinedStyle"
                        android:id="@+id/button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Botón 1"
                        android:textSize="12sp"
                        />

                    <Button
                        style="?attr/materialButtonOutlinedStyle"
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Botón 2"
                        android:textSize="12sp"
                        />

                    <Button
                        style="?attr/materialButtonOutlinedStyle"
                        android:id="@+id/button3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Botón 3"
                        android:textSize="12sp"/>

                    <Button
                        style="?attr/materialButtonOutlinedStyle"
                        android:id="@+id/button4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Botón 4"
                        android:textSize="12sp"/>

                </com.google.android.material.button.MaterialButtonToggleGroup>

            </LinearLayout>

            <!-- Información y botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Título de información -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="4dp">

                    <!-- Filtro desplegable izquierdo de sede -->
                    <!--<Spinner
                        android:id="@+id/leftSpinnerSede"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/spinner_background"
                        android:dropDownWidth="40dp"/>-->

                </LinearLayout>


                <!-- Subtítulo 1 -->
                <TextView
                    android:id="@+id/titulo_direccion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Av arequipa 456 piso 3"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="4dp"
                    android:layout_gravity="center_horizontal"
                    />

                <!-- Texto 1 -->
                <TextView
                    android:id="@+id/subtitulo_direccion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Texto 1"
                    android:textSize="14sp"
                    android:paddingBottom="8dp"
                    android:layout_gravity="center_horizontal"/>

                <!-- Texto 2 -->
                <TextView
                    android:id="@+id/titulo_descripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingBottom="16dp"
                    android:text="Texto 2"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"/>

                <!-- Botones -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver Carta"
                        android:textSize="12sp"
                        android:layout_marginRight="60dp"
                        android:elevation="10dp"/>

                    <Button
                        android:id="@+id/btnEmpezarRuta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Empezar Ruta"
                        android:textSize="12sp"
                        android:layout_marginLeft="60dp"
                        android:elevation="10dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>